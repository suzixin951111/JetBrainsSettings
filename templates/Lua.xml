<templateSet group="Lua">
  <template name="com" value="--[[&#10;    $END$&#10;]]&#10;function $A_FUNC_NAME$($VAR$)&#10;&#10;end" description="add comment to export function" toReformat="false" toShortenFQNames="true">
    <variable name="A_FUNC_NAME" expression="" defaultValue="" alwaysStopAt="true" />
    <variable name="VAR" expression="" defaultValue="" alwaysStopAt="true" />
    <context>
      <option name="LUA_CODE" value="true" />
    </context>
  </template>
  <template name="func" value="--[[&#10;    $COMMENT$&#10;]]&#10;function $A_FUNC_NAME$($VAR$)&#10;    $END$&#10;end" description="define function" toReformat="true" toShortenFQNames="true">
    <variable name="A_FUNC_NAME" expression="" defaultValue="" alwaysStopAt="true" />
    <variable name="VAR" expression="" defaultValue="" alwaysStopAt="true" />
    <variable name="COMMENT" expression="" defaultValue="" alwaysStopAt="true" />
    <context />
  </template>
  <template name="iof" value="print(&quot;-------------------- $VAR$ = &quot;, table.tostring($VAR$))$END$" description="print" toReformat="false" toShortenFQNames="true">
    <variable name="VAR" expression="" defaultValue="" alwaysStopAt="true" />
    <context>
      <option name="LUA_CODE" value="true" />
    </context>
  </template>
  <template name="log" value="print(&quot;^^^^^^ $VAR$ &quot;)$END$" description="print simple log" toReformat="false" toShortenFQNames="true">
    <variable name="VAR" expression="" defaultValue="" alwaysStopAt="true" />
    <context>
      <option name="LUA_CODE" value="true" />
    </context>
  </template>
</templateSet>